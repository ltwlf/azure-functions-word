{
  "swagger": "2.0",
  "host": "ltwlf-functions-word.azurewebsites.net",
  "basePath": "/api",
  "info": {
    "title": "Advanced Word Template Generator",
    "version": "1.0.0.0",
    "description": "Replace content placeholders in a Word template"
  },
  "schemes": [
    "https"
  ],
  "paths": {
    "/ProcessTemplate": {
      "post": {
        "description": "Replace content placeholders in a word document",
        "operationId": "ProcessTemplate",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/octet-stream"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Word file as base64 string with content placeholders",
            "required": true,
            "schema": {
              "type": "object",
              "required": [
                "document"
              ],
              "properties": {
                "document": {
                  "type": "string",
                  "format": "byte"
                },
                "data": {
                  "type": "object",
                  "additionalProperties": true
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Word document as Base64 string",
            "schema": {
              "type": "string",
              "format": "byte"
            }
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "apikeyQuery": {
      "type": "apiKey",
      "name": "code",
      "in": "query"
    }
  }
}